<div id="vendor-wraper" style="display: none !important;">
	<div id="vendor-data" style="display: none !important;">
		<?php echo $this->getChildHtml('vendorRegForm'); ?>
	</div>
	<script type="text/javascript">
		function vendorFields(){
			var formElement = document.getElementById('email_address').parentNode;
			if(formElement) {
				while(formElement.nodeName != 'UL') {
					formElement = formElement.parentNode;
				}
				var formData 	= formElement.innerHTML;
				
				formElement.innerHTML =  formData + document.getElementById('vendor-data').innerHTML;
				document.getElementById('vendor-wraper').innerHTML = '';
			}
		}
		window.onload = function() {
			vendorFields();
		}
	</script>
</div>
